{
  "version": 1.1,
  "locale": {
    "source": "en",
    "targets": [
      "es"
    ]
  },
  "buckets": {
    "markdown": {
      "include": [
        "demo/markdown/[locale]/*.md"
      ],
      "exclude": [
        "demo/markdown/[locale]/ignored.md"
      ]
    },
    "json": {
      "include": ["demo/json/[locale].json"]
    }
  }
}
