{
    "name": "lingodotdev/sdk",
    "description": "Official PHP SDK for Lingo.dev",
    "version": "0.1.0",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Lingodotdev\\Sdk\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Lingodotdev\\Sdk\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": ">=7.4",
        "guzzlehttp/guzzle": "^7.0",
        "respect/validation": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "scripts": {
        "test": "phpunit",
        "cs": "phpcs src/ tests/",
        "cs-fix": "phpcbf src/ tests/"
    }
}
