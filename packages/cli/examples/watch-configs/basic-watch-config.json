{
  "$schema": "./watch-config-schema.json",
  "patterns": {
    "include": ["**/*.json", "**/*.yaml", "**/*.yml"],
    "exclude": [
      "**/node_modules/**",
      "**/.git/**",
      "**/build/**",
      "**/dist/**",
      "**/*.tmp",
      "**/*.backup.*"
    ]
  },
  "debounce": {
    "delay": 5000,
    "maxWait": 30000
  },
  "monitoring": {
    "enableProgressIndicators": true,
    "enableNotifications": false,
    "logLevel": "minimal"
  },
  "performance": {
    "batchSize": 50,
    "rateLimitDelay": 100
  }
}
