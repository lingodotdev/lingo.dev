{
  "version": 1.2,
  "locale": {
    "source": "en",
    "targets": [
      "ru",
      "fr",
      "es",
      "de",
      "zh-Hans",
      "ko",
      "ja",
      "it",
      "ar",
      "hi",
      "pt-BR",
      "uk-UA",
      "bn"
    ]
  },
  "buckets": {
    "markdown": {
      "include": [
        "readme/[locale].md"
      ]
    },
    "mdx": {
      "include": [],
      "codehikeOptions": {
        "preserveAnnotations": true,
        "preserveComponents": true
      }
    }
  },
  "$schema": "https://lingo.dev/schema/i18n.json"
}
