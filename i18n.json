{
  "version": "1.10",
  "locale": {
    "source": "en",
    "targets": [
      "ru",
      "he",
      "fr",
      "es",
      "de",
      "zh-Hans",
      "ko",
      "ja",
      "it",
      "ar",
      "hi",
      "pt-BR",
      "uk-UA",
      "bn",
      "fa",
      "pl",
      "tr"
    ]
  },
  "buckets": {
    "mdx": {
      "include": ["readme/[locale].md"]
    }
  },
  "provider": {
    "id": "google",
    "model": "gemini-2.5-pro",
    "prompt": "Translate from {source} to {target}. Output raw JSON only.",
    "settings": {
      "temperature": 0
    }
  },
  "$schema": "https://lingo.dev/schema/i18n.json"
}
