{
  "version": "1.11",
  "locale": {
    "source": "en",
    "targets": [
      "ru",
      "he",
      "fr",
      "es",
      "de",
      "zh-Hans",
      "ko",
      "ja",
      "it",
      "ar",
      "hi",
      "pt-BR",
      "uk-UA",
      "bn",
      "fa",
      "pl",
      "tr"
    ]
  },
  "buckets": {
    "mdx": {
      "include": ["readme/[locale].md"]
    }
  },
  "review": {
    "attribute": "data-lingo-id",
    "outputDir": ".lingo/context",
    "routes": [],
    "compiler": {
      "sourceRoot": "src",
      "lingoDir": "lingo"
    }
  },
  "$schema": "https://lingo.dev/schema/i18n.json"
}
