{
  "version": 1.7,
  "locale": {
    "source": "en",
    "targets": [
      "ru",
      "fr",
      "es",
      "de",
      "zh-Hans",
      "ko",
      "ja",
      "it",
      "ar",
      "hi",
      "pt-BR",
      "uk-UA",
      "bn",
      "fa"
    ]
  },
  "buckets": {
    "markdown": {
      "include": ["readme/[locale].md"]
    },
    "mdx": {
      "include": [],
      "lockedPatterns": [
        "!params",
        "!! [\\w_]+",
        "!type [\\w<>\\[\\]\"',]+",
        "!required",
        "!values [\\s\\S]*?(?=\\n\\n|$)"
      ]
    }
  },
  "$schema": "https://lingo.dev/schema/i18n.json"
}
