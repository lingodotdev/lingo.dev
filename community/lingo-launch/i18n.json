{
    "$schema": "https://lingo.dev/schema/i18n.json",
    "version": "1.10",
    "locale": {
        "source": "en",
        "targets": [
            "es",
            "de",
            "fr",
            "hi"
        ]
    },
    "buckets": {
        "json": {
            "include": [
                "locales/[locale].json"
            ]
        }
    }
}