# Production Dockerfile for Server
FROM node:20-alpine AS builder

WORKDIR /app

COPY package*.json ./

RUN npm install

COPY . .

# Multi-stage build for production
FROM node:20-alpine

WORKDIR /app

COPY --from=builder /app/node_modules ./node_modules
COPY --from=builder /app .

RUN npm prune --production

EXPOSE 8000

CMD ["npm", "start"]
