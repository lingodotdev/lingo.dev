{
  "$schema": "https://lingo.dev/schema/lingo.config.json",
  "version": 1,
  "project": {
    "name": "polyglot-chat-lingo-demo",
    "description": "Realtime multilingual chat demo"
  },
  "locale": {
    "source": "en",
    "targets": ["es", "fr", "de", "ja", "zh", "ko", "pt", "ar", "hi", "ru"]
  },
  "buckets": {
    "app": {
      "include": [
        "app/**/*.tsx",
        "app/**/*.ts",
        "components/**/*.tsx",
        "components/**/*.ts"
      ],
      "exclude": [
        "**/*.test.ts",
        "**/*.spec.ts",
        "**/node_modules/**"
      ]
    },
    "docs": {
      "include": [
        "docs/**/*.md",
        "docs/**/*.mdx"
      ]
    },
    "locales": {
      "include": [
        "locales/**/*.json"
      ]
    }
  },
  "extract": {
    "patterns": [
      {
        "match": "t\\(['\"]([^'\"]+)['\"]\\)",
        "description": "t() function calls"
      },
      {
        "match": "<Trans[^>]*>([^<]+)</Trans>",
        "description": "Trans component content"
      }
    ],
    "ignore": [
      "console.log",
      "console.error",
      "throw new Error"
    ]
  },
  "output": {
    "format": "json",
    "path": "locales/{{locale}}/{{bucket}}.json"
  },
  "ci": {
    "autoTranslate": true,
    "createPullRequests": true,
    "branch": "lingo/translations"
  }
}
